<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Welcome</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/style/main.css">

    <script src="/bower_components/angular/angular.min.js"></script>
    <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>

    <script src="/js/app.js"></script>
    <script src="js/services/postService.js"></script>
    <script src="js/services/userService.js"></script>
    <script src="js/services/authService.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  </head>
  <body ng-app="myApp" ng-controller="myController">

    <div class="container">
      <div class="row">
        <div class="col-md-5">
          <div class="alert alert-danger" role="alert" ng-show="messageOn">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            {{message}}
          </div>
        </div>
      </div>

    <div class="row" ng-hide="logginIn">

    <input type="text" placeholder="이메일" ng-model="currentUser.email">
    <input type="text" placeholder="비밀번호" ng-model="currentUser.password">
    <button type="button" ng-click="login()">로그인</button>

    <a href="/auth/facebook">Login with Facebook</a>
    <a href="/auth/google">Sign In with Google</a>

      <h3>Sign Up</h3>
        <input type="text" placeholder="이메일" name="user[email]" ng-model="newUser.email">
        <input type="text" placeholder="닉네임" name="user[nickname]" ng-model="newUser.nickname">
        <input type="text" placeholder="비밀번호" name="user[password]" ng-model="newUser.password">
        <input type="button" ng-click="signup()" value="등록">

      <p ng-repeat="user in users">
          {{user.email}} : {{user.nickname}}
          <button type="button" ng-click="destoryUser(user._id)">삭제</button>
      </p>

    </div>

    <div class="row">

    <h1>EJS</h1>

    <div ng-show="logginIn">
      <button type="button" ng-click="logout()">로그아웃</button>
      <p>Nickname : {{currentInfo.nickname}}</p>
      <p>Email : {{currentInfo.email}}</p>
    </div>

    <p ng-repeat="product in products">
        {{product.title}} : {{product.body}}
        <button type="button" ng-click="destory(product._id)">삭제</button>
    </p>
    <p>{{postData.title}}</p>
    <p>{{postData.body}}</p>
    <input type="text" placeholder="제목" ng-model="postData.title">
    <input type="text" placeholder="내용" ng-model="postData.body">
    <button type="button" ng-click="post()">작성</button>

    <input type="text" placeholder="검색어" ng-model="searchData">
    <button type="button" ng-click="search(searchData)">검색</button>

      <p ng-repeat="product in result">
          {{product.title}} : {{product.body}}
      </p>

      </div>
    </div>
  </body>
</html>
